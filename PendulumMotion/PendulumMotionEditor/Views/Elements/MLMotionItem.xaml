<UserControl x:Class="PendulumMotionEditor.Views.Elements.MLMotionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PendulumMotionEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="45" Background="#E0E0E0">
        <TextBlock FontFamily="/SweepMotionEditor;component/Resource/Font/#KoPubDotum_Pro Bold" FontSize="14" Text="Name" TextOptions.TextHintingMode="Animated" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#FF2C2C2C"/>
        <Canvas Name="PreviewContext" Width="60" Height="37" Background="#A69165" HorizontalAlignment="Right" Margin="0,0,5,0">
            
        </Canvas>
        <Border Height="1" Background="#B5B5B5" VerticalAlignment="Bottom"></Border>
    </Grid>
</UserControl>
